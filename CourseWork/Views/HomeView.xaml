<UserControl x:Class="CourseWork.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CourseWork.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="265*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,0,0,0.4">
            <Label Content="Home View" FontSize="16"/>
        </Grid>
        <Grid Grid.Row="1">
            <Label Content="Welcome to our shop" FontSize="24" HorizontalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="2" Background="Black">
            <TextBox Width=" 400" Height="50">
                <TextBox.Template>
                    <ControlTemplate>
                        <Border CornerRadius="20" Padding="2" BorderThickness="1" BorderBrush="White">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>
            <Button Width="125" Height="50" Margin="540,0,0,0"/>
        </Grid>
    </Grid>
</UserControl>
